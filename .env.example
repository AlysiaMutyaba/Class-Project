# Example environment variables for AgroPredict
# Replace placeholders before deploying. Do NOT commit secrets to git.

# Flask secret key (generate a secure random string for production)
SECRET_KEY=replace-with-a-secret

# SQLAlchemy DB URL (Postgres recommended for production):
# postgres format: postgresql://<user>:<password>@<host>:5432/<dbname>
# Example for docker-compose (uses service name `db`):
SQLALCHEMY_DATABASE_URI=postgresql://myuser:mypassword@db:5432/mydb
# Local sqlite fallback (uncomment to use):
# SQLALCHEMY_DATABASE_URI=sqlite:///instance/app.db

# Database connection pieces (optional)
DB_HOST=db
DB_PORT=5432
DB_USER=myuser
DB_PASSWORD=mypassword
DB_NAME=mydb

# Flask / Gunicorn settings
FLASK_APP=app.py
FLASK_ENV=production
GUNICORN_HOST=0.0.0.0
GUNICORN_PORT=5000
GUNICORN_WORKERS=2

# Wait-for-db script timeout (seconds)
DB_WAIT_TIMEOUT=60

# Optional: override model path
# MODEL_PATH=model/my_custom_cnn_windows.pkl
